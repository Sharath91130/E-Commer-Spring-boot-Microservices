server:
  port: 8080

spring:
  application:
    name: gateway-service
  cloud:
    gateway:
      routes:
        - id: user-service
          uri: http://localhost:8082
          predicates:
            - Path=/user/**
          filters:
            - name: ApiKeyFilter
            - AddRequestHeader=Secret-Key, MySecretKey123

        - id: order-service
          uri: http://localhost:8081
          predicates:
            - Path=/order/**
          filters:
            - name: ApiKeyFilter
            - AddRequestHeader=Secret-Key, MySecretKey123

        - id: product-service
          uri: http://localhost:8083
          predicates:
            - Path=/product/**
          filters:
            - name: ApiKeyFilter
            - AddRequestHeader=Secret-Key, MySecretKey123
